@{
}
@model Product
@{
    ViewData["Title"] = "Update Product";
}
<h3>
    @ViewData["Title"]
</h3>
<hr />
<form asp-action="Edit">
    <input type="hidden" asp-for="ProductId"/>
<div class="container">
    <div class="mb-2">
        <label asp-for="MProductName" class="Control-level mb-2">

        </label>
        <div>
            <input asp-for="MProductName" />
        </div>
        <span asp-validation-for="MProductName" class="text-denger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="ProductPrice" class="Control-level mb-2">

        </label>
        <div>
            <input asp-for="ProductPrice" />
        </div>
        <span asp-validation-for="ProductPrice" class="text-denger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="ProductQty" class="Control-level mb-2">

        </label>
        <div>
            <input asp-for="ProductQty" />
        </div>
        <span asp-validation-for="ProductQty" class="text-denger"></span>
    </div>
    <div class="mb-2">
        <label class="control-label mb-2">
            CategoryName

        </label>

        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option>Select Category</option>
        </select>


    </div>
    <div>
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</div>
</form>
