@{
}
@model IEnumerable<Product>
@{
    ViewData["Tittle"] = "Product List";

}

<h1>
   @ViewData["Tittle"]
</h1>
<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Create New Product</a>
</p>
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MProductName)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.First().Categories.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories.CategoryName)
            </th>
            
            <th>
                
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            @foreach(var product in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => product.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(model =>product.MProductName)
                    </td>
                       
                    <td>
                        @Html.DisplayFor(model => product.Categories.CategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => product.Categories.CategoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-success btn-sm">Update</a>
                        </td>
                        <td>
                        
                        <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">
                    <div>
                        Product not avliable in Database
                    </div>
                </td>

            </tr>
        }

    </tbody>
    
</table>
